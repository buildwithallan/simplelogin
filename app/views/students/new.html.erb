<%= form_for @student do |f| %>

	<div>
	  <%= f.label :name %>
	  <%= f.text_field :name %>
	</div>

	<div>
	  <%= f.label :student_id %>
	  <%= f.text_field :student_id %>
	</div>

	<div>
	  <%= f.label :password %>
	  <%= f.text_field :password %>
	</div>

	<div>
	  <%= f.label :password_confirmation %>
	  <%= f.text_field :password_confirmation %>
	</div>

	<br>

	<div>
		<%= f.submit "Sign Up" %>
	</div>
	
<% end %>